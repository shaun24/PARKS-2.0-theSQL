                {{/each}}
            </select><br> --}}
            
        </fieldset>

        <div class="pure-g form-boxes">
            <div class="pure-control-group pure-u-1-2">
                {{#each features}}
                <fieldset>
                    <input type="checkbox" name={{name}} value="1"> {{name}} <br>
                    <input type="checkbox" name={{name}} value="lighted"> Lighted after dark
                    <input type="checkbox" name={{name}} value="indoor"> Indoors
                    <input type="checkbox" name={{name}} value="covered"> Covered <br><br>
                </fieldset>
                {{/each}}
            </div>
        </div>
        
        {{!-- <div class="pure-g form-boxes">
            <div class="pure-control-group pure-u-1-2">
