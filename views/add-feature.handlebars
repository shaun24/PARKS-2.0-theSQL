<div class="header">
        <h1> Add Park Features </h1>
        <h2 id="subheader">Add new features to a park we may have missed to our database</h2>
</div>
<div class="add-feature content">
    <form class="pure-form pure-form-stacked" id="new-feature">
    {{!-- <form class="pure-form pure-form-stacked " action="/api/features" target="_blank" method="POST"> --}}
        <fieldset class="pure-group">
        
            <select  name="ParkId" class="pure-input-1">
                
                <option disabled selected value="">Pick a Park to add a feature to</option>
                {{#each parks}}
                <option value={{id}}>{{name}}</option>
                {{/each}}
            </select><br>

            {{!-- <select  name="name" class="pure-input-1">
                
                <option disabled selected value="">Pick a Feature add to the selected park</option>
                {{#each features}}
